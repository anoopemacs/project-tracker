<!DOCTYPE html>
<html>
  <head>
    <title>Project Tracker</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script> window.CLOUDINARY_SETTINGS = {
                cloud_name: "<%= ENV['cloud_name'] %>",
                upload_preset: "<%= ENV['upload_preset'] %>" } </script>

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-65225807-1', 'auto');
      ga('send', 'pageview');

    </script>
    
    <%= csrf_meta_tags %>

    <% if current_user %>
        <script> window.CURRENT_USER_USERNAME = "<%= current_username %>" 
                 window.CURRENT_USER_ID = "<%= current_user.id %>" </script>
    <% else %>
        <script> window.CURRENT_USER_USERNAME = "Guest" 
                 window.CURRENT_USER_ID = 0 </script>
    <% end %>
  </head>

  <body>
    <div id="main"><%= yield %></div>
  </body>
</html>
