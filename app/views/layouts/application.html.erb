<!DOCTYPE html>
<html>
<head>
  <title>Basecamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="logo">
    <center><%= image_tag "logo.png", class: "logo-image" %></center>
  </div>

  <nav class="navbar navbar-defaults">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" 
              data-toggle="collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/#">BaseCamp</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="#">Index</a></li>
        <li><a href="#">Browse Projects</a></li>
        <li><a href="#">Tour</a></li>
        <% if current_user %>
          <li><%= link_to "Log Out", session_url, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_user_url %></li>
          <li><%= link_to "Log In", new_session_url %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
          role="button" aria-expanded="false">Dropdown<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
          </ul>
        </li>
      </ul>

    </div>
  </nav>
  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
