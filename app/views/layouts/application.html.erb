<!DOCTYPE html>
<html>
<head>
  <title>Basecamp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <script> window.CLOUDINARY_SETTINGS = {
              cloud_name: "<%= ENV['cloud_name'] %>",
              upload_preset: "<%= ENV['upload_preset'] %>"} </script>
  <%= csrf_meta_tags %>
</head>

<body>
  <nav class="navbar navbar-defaults">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" 
              data-toggle="collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href=<%= root_url %>>BaseCamp</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="#home">Index</a></li>
        <li><a href="#">Browse Projects</a></li>
        <li><a href="#">Tour</a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
                      role="button" aria-expanded="false">Dropdown
                      <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <% if current_user %>
              <script> window.CURRENT_USER_USERNAME = "<%= current_user.username %>" 
                       window.CURRENT_USER_ID = "<%= current_user.id %>" </script>
              <li><%= link_to "Log Out", session_url, method: :delete %></li>
            <% else %>
              <script> window.CURRENT_USER_USERNAME = "Guest" 
                       window.CURRENT_USER_ID = 0 </script>
              <li><%= link_to "Log In", new_session_url %></li>
              <li><%= link_to "Sign Up", new_user_url %></li>
            <% end %>
            <li class="divider"></li>            
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
          </ul>
        </li>
      </ul>

    </div>
  </nav>

  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
