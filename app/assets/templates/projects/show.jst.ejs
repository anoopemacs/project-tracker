<div class="col-md-2" id="sidebar-wrapper">
  <ul class="sidebar-nav">
    <li class="sidebar-brand"><a href="#">PROJECT TRACKER</a></li>
    <li><a href="/">
      <span class="glyphicon glyphicon-home btn-lg" aria-hidden="true"></span>Home</a>
    </li>

    <li><a href="/#users/<%= window.CURRENT_USER_ID %>">
      <span class="glyphicon glyphicon-user btn-lg" aria-hidden="true"></span>Profile Page</a>
    </li>

    <li><a href="/#home">
      <span class="glyphicon glyphicon-tasks btn-lg" aria-hidden="true"></span>Projects Index</a>
    </li>
  </ul>
</div>

<div class="col-md-10 col-md-offset-2">
  <div class="side-bar col-md-3">
    <!-- Project Header -->
    <div class="project-header-title">
      <u><h1 class="project-title" id="project-title"><%= project.escape('title') %></h1></u>
      <hr>
      <h4 class="project-owner">
        Owner: <a href="/#users/<%= project.escape('owner_id') %>"><%= project.escape('owner_name') %></a>
      </h4>
    </div>

    <hr>
    <!-- Project Description -->
    <div class="project-header-description">
      <h3 class="project-description">Description: </h3>
      <u><p class="project-description-text" id="description"><%= project.escape('description') %></p></u>
    </div>

    <hr>
    <!-- Project Stats -->
    <div class="project-show-stats clearfix">
      <font color="red"><p id="stats-incomplete"><%=project.num_incomplete %> Incomplete </p></font>
      <font color="blue"><p id="stats-complete"><%= project.num_complete %> Completed </p></font>
    </div>
    
    <hr>
    <!-- Project Buttons -->
    <div class="project-header-buttons clearfix">
      <button class="upload-button btn-xs btn btn-pri">Upload Image</button>
      <% if (window.CURRENT_USER_ID === project.escape('owner_id')) { %>
        <button type="button" class="invite-users btn btn-xs btn-success pull-right">Invite Users</button>
      <% } %>
      <!-- <button class="create-pdf">Download PDF</button> -->
    </div>

    <!-- User Search -->
    <div class="project-user-search hidden"></div>

    <!-- Project Collaborators -->
    <div class="collaborators-list clearfix">
      <div class="list-collaborators"></div>
      <% if (window.CURRENT_USER_ID === project.escape('owner_id')) { %>
        <div class="delete-member pull-right" id="droppable-member">
          <!-- <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> -->
        </div>
      <% } %>
    </div>

    <!-- Upload Section -->
    <div class="project-show-upload-bar clearfix">
      <h4 id="upload-title">Uploaded Images</h4>

      <div id="myCarousel" class="carousel slide pull-right" data-ride="carousel">
        <center><div class="carousel-inner" role="listbox"></div></center>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="main-content col-md-8 col-md-offset-1">
    <!-- Tasks Container -->
    <div class="tasks-container">

      <div class="tasks-container-header">
        <div class="row">
          <h1 class="tasks-title">Tasks</h1>
          <button class="btn btn-xs btn-pri" id="new-task">New Task</button>
          <% if (window.CURRENT_USER_ID === project.escape('owner_id')) { %>
            <div class="delete-member pull-right" id="droppable-assignment">
              <!-- <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> -->
            </div>
          <% } %>
        </div>
      </div>

      <div class="active" id="div-incomplete">
        <h4 class="project-show-task-title" id="tasks-incomplete">To Do</h4>
        <div class="tasks-container-body-incomplete pre-scrollable clearfix"></div>
      </div>
      
      <div class="inactive" id="div-completed">
        <h4 class="project-show-task-title" id="tasks-completed">Completed!</h4>
        <div class="tasks-container-body-completed pre-scrollable clearfix"></div>
      </div>
    </div>
  </div>
</div>