<div class="col-md-10 col-md-offset-2">
  <div class="side-bar col-md-4">
    <!-- Project Header -->
    <div class="project-header-title">
      <u><h1 class="project-title" id="project-title"><%= project.escape('title') %></h1></u>
      <br>
      <h4 class="project-owner">
        Owner: <a href="/#users/<%= project.escape('owner_id') %>"><%= project.escape('owner_name') %></a>
      </h4>
    </div>

    <!-- Project Description -->
    <div class="project-header-description">
      <h3 class="project-description">Description: </h3>
      <u><p class="project-description-text" id="description"><%= project.escape('description') %></p></u>
    </div>

    <!-- Project Buttons -->
    <div class="project-header-buttons clearfix">
      <button type="button" class="new-task btn btn-sm btn-pri pull-right">New Task</button>
      <button type="button" class="upload-button btn-sm btn btn-pri">Upload Image</button>
      <% if (window.CURRENT_USER_ID === project.escape('owner_id')) { %>
        <button type="button" class="invite-users btn btn-sm btn-success">Invite Users</button>
      <% } %>
    </div>

    <!-- User Search -->
    <div class="project-user-search hidden"></div>

    <!-- Project Collaborators -->
    <div class="collaborators-list clearfix">
      <div class="list-collaborators"></div>
      <% if (window.CURRENT_USER_ID === project.escape('owner_id')) { %>
        <div class="delete-member pull-right" id="droppable-member">
          <!-- <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> -->
        </div>
      <% } %>
    </div>

    <!-- Upload Section -->
    <div class="project-show-upload-bar clearfix">
      <h3 id="upload-title">Uploaded Images</h3>

      <div id="myCarousel" class="carousel slide pull-right" data-ride="carousel">
        <center><div class="carousel-inner" role="listbox"></div></center>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div class="main-content col-md-8">
    <!-- Tasks Container -->
    <div class="tasks-container">
      <div class="tasks-container-header">
        <div class="row">
          <h1 class="tasks-title">Tasks</h1>
          <% if (window.CURRENT_USER_ID === project.escape('owner_id')) { %>
            <div class="delete-member pull-right" id="droppable-assignment">
              <!-- <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> -->
            </div>
          <% } %>
        </div>
      </div>

      <div class="tasks-container-body"></div>
    </div>
  </div>
</div>