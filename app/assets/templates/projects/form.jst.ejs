<form action="/api/projects" method="post" class="new-project col-md-4 col-md-offset-4">
  <h1 class="form-title">Create a New Project</h1>

  <div class="form-group">
    <label for="project_title">Title</label>
    <input class="form-control" type="text" name="project[title]" 
           value="<%= project.escape('title') %>" 
           id="project_title">
  </div>

  <div class="form-group">
    <label for="project_description">Description</label>
    <textarea class="form-control" name="project[description]"id="project_description"></textarea>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>